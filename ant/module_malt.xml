<?xml version="1.0" encoding="UTF-8"?>
<project name="malt">
  <target name="compile.module.malt" description="Compile module Pimlico-Malt; production classes">
    <mkdir dir="${pimlico.output.dir}"/>
    <javac destdir="${pimlico.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.pimlico}/javac" includeantruntime="false">
      <compilerarg line="${compiler.args.pimlico}"/>
      <bootclasspath refid="pimlico.module.bootclasspath"/>
      <classpath refid="pimlico.module.production.classpath"/>
      <src refid="pimlico.module.sourcepath"/>
      <include name="pimlico/malt/**/*.java"/>
    </javac>
  </target>

  <target name="clean.module.malt" description="cleanup module">
    <delete dir="${pimlico.output.dir}/pimlico/malt"/>
  </target>

  <target name="malt" depends="compile.module.malt" description="Malt wrapper compile"/>
</project>