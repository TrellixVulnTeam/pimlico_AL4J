<?xml version="1.0" encoding="UTF-8"?>
<project name="module_opennlp" default="compile.module.opennlp">
  <dirname property="module.opennlp.basedir" file="${ant.file.module_opennlp}"/>
  
  <property name="module.jdk.home.opennlp" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.opennlp" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.opennlp" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.opennlp" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="pimlico.output.dir" value="${module.pimlico.basedir}/build/pimlico"/>
  <property name="pimlico.testoutput.dir" value="${module.pimlico.basedir}/build/test/pimlico"/>
  
  <path id="pimlico.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="pimlico.module.production.classpath">
    <path refid="${module.jdk.classpath.pimlico}"/>
  </path>
  
  <path id="pimlico.runtime.production.module.classpath">
    <pathelement location="${pimlico.output.dir}"/>
  </path>
  
  <path id="pimlico.module.classpath">
    <path refid="${module.jdk.classpath.pimlico}"/>
    <pathelement location="${pimlico.output.dir}"/>
  </path>
  
  <path id="pimlico.runtime.module.classpath">
    <pathelement location="${pimlico.testoutput.dir}"/>
    <pathelement location="${pimlico.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.pimlico">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.pimlico">
    <patternset refid="excluded.from.module.pimlico"/>
  </patternset>
  
  <path id="pimlico.module.sourcepath">
    <dirset dir="${module.pimlico.basedir}">
      <include name="src/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.pimlico" depends="compile.module.pimlico.production,compile.module.pimlico.tests" description="Compile module Pimlico"/>
  
  <target name="compile.module.pimlico.production" description="Compile module Pimlico; production classes">
    <mkdir dir="${pimlico.output.dir}"/>
    <javac destdir="${pimlico.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.pimlico}/javac">
      <compilerarg line="${compiler.args.pimlico}"/>
      <bootclasspath refid="pimlico.module.bootclasspath"/>
      <classpath refid="pimlico.module.production.classpath"/>
      <src refid="pimlico.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.pimlico"/>
    </javac>
    
    <copy todir="${pimlico.output.dir}">
      <fileset dir="${module.pimlico.basedir}/src/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.pimlico.tests" depends="compile.module.pimlico.production" description="compile module Pimlico; test classes" unless="skip.tests"/>
  
  <target name="clean.module.pimlico" description="cleanup module">
    <delete dir="${pimlico.output.dir}"/>
    <delete dir="${pimlico.testoutput.dir}"/>
  </target>
</project>